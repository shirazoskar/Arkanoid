<project default="compile">

    <path id="sourceFiles">
        <fileset dir="src" casesensitive="yes">
            <include name="**/*.java"/>
        </fileset>
    </path>

    <property name="classpath" value="bin:biuoop-1.4.jar" />

    <target name="compile">
        <mkdir dir="bin"/>
        <javac classpath="${classpath}" srcdir="src" destdir="bin" includeantruntime="false"/>
    </target>

    <target name="clean">
        <delete dir="bin" />
    </target>

    <target name="run" depends="compile">
        <java classname="Ass3Game" classpath="${classpath}" fork="true"/>
    </target>

    <target name="check">
        <java jar="checkstyle-8.44-all.jar" fork="true">
            <arg line="-c biuoop.xml" />
            <arg value="src/collisions"/>
            <arg value="src/game"/>
            <arg value="src/geom"/>
            <arg value="src/listeners"/>
            <arg value="src/sprites"/>
        </java>
    </target>

</project>